<%- include('../partials/head', {title: 'Crear'}) %> 
<body>
    <%- include('../partials/header') %>
    <main class="main__create">
        <div class="main__caja">
            <form action="/adm/create" method="POST" class="main__caja__formulario">
                <div class="main__formulario__cajas">
                    <label for="name">NOMBRE DEL PRODUCTO</label>
                    <input type="text" name="name" id="name">
                </div>
                <div class="main__formulario__cajas">
                    <label for="description">DESCRIPCION</label>
                    <input type="text" name="description" id="description" maxlength="1000">
                </div>
                <div class="main__formulario__cajasSelectoras">
                    <select name="category" id="category" aria-label="Default select example">
                        <option value="" selected hidden>--Seleccione una categoria--</option>
                        <% categorys.forEach(category => { %>
                            <option value="<%= category %>"><%= category %></option>
                        <% }) %> 
                    </select>
                </div>
                <div class="main__formulario__cajasSelectoras">
                    <select name="subCategory" id="subCategory" aria-label="Default select example">
                        <option value="" selected hidden>--Seleccione una clase--</option>
                        <% subCategorys.forEach(subCategory => { %>
                            <option value="<%= subCategory %>"><%= subCategory %></option>
                        <% }) %> 
                    </select>
                </div>
