<body>
    <%- include('../partials/header') %>
    <main class="main__create">
        <div class="main__caja">
            <form action="/products/update/<%= product.id %>?_method=PUT" method="POST" class="main__caja__formulario">
                <div class="main__formulario__cajas">
                    <label for="name">Nombre del producto</label>
                    <input type="text" name="name" id="name" value="<%= product.name %>">
                </div>
                <div class="main__formulario__cajas">
                    <label for="descripcion">Descripci√≥n</label>
                    <input type="text" name="description" id="descripcion" maxlength="1000" value="<%= product.description %>">
                </div>
                <div class="main__formulario__cajasSelectoras">
                    <select name="categoria" id="categoria" aria-label="Default select example">
                        <% categorias.forEach(categoria => { %>
                            <option value="<%= categoria %>" <%= product.categoria === categoria && 'selected' %>><%= categoria %></option>
                        <% }) %> 
                    </select>
                </div>
                <div class="main__formulario__cajasSelectoras">
                        <select name="clase" id="clase" aria-label="Default select example">
                            <% clases.forEach(clase => { %>
                                <option value="<%= clase %>" <%= product.clase === clase && 'selected'%>><%= clase %></option>
                            <% }) %> 
                    </select>
                </div>
