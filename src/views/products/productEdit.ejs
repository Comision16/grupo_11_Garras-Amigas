                <div class="main__formulario__cajaPrecio">
                    <label for="stock">Stock</label>
                    <input type="number" name="stock" id="stock"   min="0" max="9999999" value="<%= productToEdit.stock %>">
                </div>
                <div class="main__formulario__cajaPrecio">
                    <label for="price">$</label>
                    <input type="number" name="price" id="price"   min="0" max="9999999" value="<%= productToEdit.price %>">
                </div>
                <div class="main__formulario__cajaDescuento">
                    <label for="discount">%</label>
                    <input type="number" name="discount" id="discount" min="0" max="100" value="<%= productToEdit.discount %>">
                </div>
                
                <div class="main__formulario__botones">
                    <input type="submit" class="submit" value="Guardar Cambios">
