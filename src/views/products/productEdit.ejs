    <main class="main__create">
        <div class="main__caja">
            <form action="/products/update/<%= product.id %>?_method=PUT " method="POST" class="main__caja__formulario">
                <div class="main__formulario__cajas">
                    <label for="name">Nombre del producto</label>
                    <input type="text" name="name" id="name" value="<%= product.name %>">
                </div>
                <div class="main__formulario__cajas">
                    <label for="descripcion">Descripci√≥n</label>
                    <input type="text" name="description" id="descripcion" maxlength="1000" value="<%= product.description %>">
                </div>
                <div class="main__formulario__cajasSelectoras">
                    <select name="category" id="category" aria-label="Default select example">
                        <% categorys.forEach(category => { %>
                            <option value="<%= category %>" <%= product.category === category && 'selected' %>><%= category %></option>
                        <% }) %> 
                    </select>
                </div>
                <div class="main__formulario__cajasSelectoras">
                        <select name="subCategory" id="subCategory" aria-label="Default select example">
                            <% subCategorys.forEach(subCategory => { %>
                                <option value="<%= subCategory %>" <%= product.subCategory === subCategory && 'selected' %>><%= subCategory %></option>
                            <% }) %> 
                    </select>
                </div>
