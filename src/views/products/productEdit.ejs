    <main class="main__create">
        <div class="main__caja">
            <form action="/products/edit/<%= productToEdit.id %>?_method=PUT " class="main__caja__formulario">
                <div class="main__formulario__cajas">
                    <label for="name">Nombre del producto</label>
                    <input type="text" name="name" id="name" value="<%= productToEdit.name %>">
                </div>
                <div class="main__formulario__cajas">
                    <label for="descripcion">Descripci√≥n</label>
                    <input type="text" name="description" id="descripcion" maxlength="1000" value="<%= productToEdit.descripcion %>">
                </div>
                <div class="main__formulario__cajasSelectoras">
                    <select name="category" id="category" value="<%= productToEdit.category %>">
                        <option value="categoria">--Selecciona una categoria--</option>
                        <option value="cama">Cama</option>
                        <option value="juguetes">Juguetes</option>
                        <option value="productos">Productos</option>
                        <option value="ropa">Ropa</option>
                    </select>
                </div>
                <div class="main__formulario__cajasSelectoras">
                    <select name="subCategory" id="subCategory" value="<%= productToEdit.subCategory %>">
                        <option value="categoria">--Selecciona una clase--</option>
                        <option value="ofertas">Oferta</option>
                        <option value="novedades">Novedades</option>
                        <option value="destacados">Destacados</option>
                    </select>
                </div>
                <div class="main__formulario__cajaImagen">
                    <label for="image">Selecciona imagen del producto</label>
                    <input type="file" name="image" id="image" value="<%= productToEdit.image %>">
                </div>
