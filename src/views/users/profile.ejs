<%- include('../partials/head', {title: 'Mi perfil' }) %>

  <body>
    <%- include('../partials/header') %>
      <main class="main--profile">
        <section>
          <div class="container py-5">
            <div class="row justify-content-center">
              <div class="col-lg-4 ">
                <div class="card mb-4 profile-user-header">
                  <div class="card-body text-center profile-user-avatar">
                    <img src="/images/users/<%=users.avatar%>" alt="avatar"
                      class=" img-fluid py-3" style="width: 500px;">
                    <div class="d-flex justify-content-center ">
                      <a href="/users/editProfile/<%= users.id %>">
                      <button type="button" class="btn btn-primary" >Editar Perfil</button></a>
                      <a href="/users/logout">
                      <button type="button" class="btn btn-outline-primary ms-1">Cerrar Sesion</button></a>
                    </div>
                  </div>
                </div>

              </div>
              <div class="col-lg-6">
                <div class="card mb-4">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Nombre</p>
                      </div>
                      <div class="col-sm-9">
                        <p class="text-muted mb-0"><%= users.name %> </p>
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Apellido</p>
                      </div>
                      <div class="col-sm-9">
                        <p class="text-muted mb-0"><%= users.surname %></p>
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Teléfono</p>
                      </div>
                      <div class="col-sm-9">
                        <p class="text-muted mb-0"><%= users.phone %></p>
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                      <div class="col-sm-3">
                        <p class="mb-0">Dirección</p>
                      </div>
                      <div class="col-sm-9">
                        <p class="text-muted mb-0"><%= users.street %></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </section>
      </main>
      <%- include('../partials/footer') %>
  </body>

  </html>