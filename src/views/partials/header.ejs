            <% } %> 
    </div>
    <!--  NAVEGADOR QUE SE VE DEBAJO DEL HEADER -->
    <div class="home__header--header--2">
        <nav class="home__header__nav--2">
            <ul>
                <li><a href="/products/product"> PRODUCTOS </a></li>
