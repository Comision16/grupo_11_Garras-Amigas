<header class="home__header">
    <div class="home__header--header">
        <!-- header de tablet y compu -->
        <div class="home__header--logo">
            <a href="/"><img src="/images/productos/garrasLogo.png" alt="logo" /></a>
        </div>
        <form action="" class="home__header--search--header">
            <input type="text" placeholder="  Buscar productos, marcas" />
            <button type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </form>
        <div class="home__header--menu">
            <label for="btn-menu"><i class="fa-solid fa-bars"></i></label>
        </div>
        <div class="home__header--favicon">
            <% if(locals.login) { %> 
            <div class="home__header--edit--2">
                <a href="/users/profile "><i class="fa-regular fa-circle-user"></i> </a>
            </div>
            <div class="home__header--carrito--2">
                <a href="/users/logout"><i class="fa-solid fa-cart-shopping"></i> </a>
            </div>
            <div>
                <a href="/users/logout"><i class="fa-solid fa-arrow-right-from-bracket"></i> </a>
            </div>
            <% }else{  %> 
            <div class="home__header--contacto--2">
                <a href="/users/login"><i class="fa-solid fa-person-walking-arrow-right"></i></a>
