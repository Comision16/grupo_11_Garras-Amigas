            <form action="" class="home__header--search">
                <input type="text" placeholder="  Buscar productos, marcas" />
                <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
            <div class="home__header--contacto-edit">
                <% if(locals.login) { %> 
                    <div class="home__header--edit">
                        <a href="/users/profile"><button><i class="fa-regular fa-circle-user"></i></button> </a>
